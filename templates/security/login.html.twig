{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <section class="section">

        <h1 class="h3 mb-3">Se connecter</h1>
        
        <form method="post">
        
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}"> Se déconnecter </a>
                </div>
            {% endif %}

                <div class="my-3">
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control form-purple" autocomplete="email" required autofocus>
                </div>

                <div class="my-3">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control form-purple" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html #}

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me" class="form-purple"> Rester connecté
                    </label>
                </div>

                <button class="btn-modalAdd mb-1" type="submit">
                    Se connecter
                </button>
        </form> 
    
        <a href="{{ path('app_forgot_password_request') }}"> Mot de passe oublié ? </a>
        {# <a href="{{ path('app_register')}}"> Créer un compte </a> #}

    </section>

{% endblock %}
