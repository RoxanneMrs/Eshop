    <a class="btn btn-dark text-white mt-2 col" href="{{ path('app_product_index') }}">back to list</a>


    {{ include('flash.html.twig') }}

        <div class="container">
            <div class="row justify-content-center">

                <h2 class="row justify-content-center"> {{ product.name }} </h2>

                {% if product.picture is empty %}
                    <img class="col-md-4" src="{{ asset('/uploads/products/default.jpg' ) }}" alt="{{product.text}}" title="{{product.name}}">
                {% else %}
                    <img class="col-md-4" src="{{ asset('/uploads/products/' ~ product.picture) }}" alt="{{product.text}}" title="{{product.name}}">
                {% endif %}

                <p> {{ product.text }} </p>
                <p> Prix : {{ product.price }} </p>
                <p> Stock : {{ product.stock }} </p>
        
            </div>
        </div>

